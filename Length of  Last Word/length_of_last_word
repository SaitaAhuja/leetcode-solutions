#include <stdio.h>
#include <string.h>

int lengthOfLastWord(char* s) {
    int length = 0;
    int i = strlen(s) - 1;
  
    while (i >= 0 && s[i] == ' ') {
        i--;
    }

    while (i >= 0 && s[i] != ' ') {
        length++;
        i--;
    }

    return length;
}

int main() {
    char sent[200];
    printf("Enter a sentence: ");
    fgets(sent, sizeof(sent), stdin);
    sent[strcspn(sent, "\n")] = '\0'; // remove newline

    int len = lengthOfLastWord(sent);
    printf("Length of last word: %d\n", len);

    return 0;
}
